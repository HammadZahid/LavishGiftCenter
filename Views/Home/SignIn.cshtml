<script type="text/javascript">

    (function() {
        var IE = false;
        if (!IE) { return; }
        if (document.compatMode && document.compatMode == 'BackCompat') {
            if (document.getElementById("af-form-REPLACE")) {
                document.getElementById("af-form-REPLACE").className = 'af-form af-quirksMode';
            }
            if (document.getElementById("af-body-REPLACE")) {
                document.getElementById("af-body-REPLACE").className = "af-body inline af-quirksMode";
            }
            if (document.getElementById("af-header-REPLACE")) {
                document.getElementById("af-header-REPLACE").className = "af-header af-quirksMode";
            }
            if (document.getElementById("af-footer-REPLACE")) {
                document.getElementById("af-footer-REPLACE").className = "af-footer af-quirksMode";
            }
        }
    })();

</script>


    <script>

        $(document).ready(function () {

            $('#checking').hide();

            $('#username').keyup(function () {

                var userName = $('#username').val();

                //alert('User Name ='+ userName);
                $('#checking').show();
                $.getJSON("/Home/CheckUserName?UserName=" + userName, function (data) {
                    $('#checking').hide();
                    if (data) {
                        $('#result').css("background-color", "red");
                        $('#result').text("User already exists");

                    }
                    else {
                        $('#result').css("background-color", "green");
                        $('#result').text("User Name is available");
                    }
                });

            });

        });

        $('#pass2').keyup(function () {
            var pass2 = $('#pass2').val();
            var pass1 = $('#pass1').val();

            //alert('User Name ='+ userName);
            $('#checking').show();

            if (pass1 != pass2) {
                $('#result_pass2').css("background-color", "red");
                $('#result_pass2').text("Passwords Not Matching");
            }
            else if (pass1 == pass2) {
                $('#result_pass2').css("background-color", "green");
                $('#result_pass2').text("Passwords Matched");
            }
        });
                
            


    </script>



